{% extends 'base_public.html.twig' %}
{% block breadcrumb_title %}
    {{ 'Public.Type.BreadcrumbTitle'| trans({}, "messages", locale) }}
{% endblock %}
{% block breadcrumb_content %} {{ 'Public.Type.BreadcrumbContent'| trans({}, "messages", locale) }} {% endblock %}

{% block main_content %}
    <section class="page-section confirmation">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-6 col-12">
                    <h2 class="grey-secondary">{{ 'Public.Type.Title'| trans({}, "messages", locale) }}
                    </h2>
                    <div class="divider"></div>
                </div>
            </div>
            <div class="row type-container">
                <div class="col-lg-6 type">
                    <div class="type__block">
                        <div class="type__block__body">
                            <div class="flex-1">
                                <div class="m-b-20">
                                    <h3>{{ 'Public.Type.Solution1.Title'| trans({}, "messages", locale) }}</h3></div>
                                <div>{{ 'Public.Type.Solution1.Message1'| trans({}, "messages", locale) }}</div>
                                <ul class="m-b-20">
                                    <li>{{ 'Public.Type.Solution1.Message2'| trans({}, "messages", locale) }}</li>
                                    <li>{{ 'Public.Type.Solution1.Message3'| trans({}, "messages", locale) }}</li>
                                    <li>{{ 'Public.Type.Solution1.Message4'| trans({}, "messages", locale) }}</li>
                                    <li>{{ 'Public.Type.Solution1.Message5'| trans({}, "messages", locale) }}</li>
                                </ul>
                                <div class="m-b-30">{{ 'Public.Type.Solution1.Message6'| trans({}, "messages", locale) }}</div>
                            </div>
                            <a type="button"
                               class="btn btn__blue btn__large type__button"
                               href="{{ path("paprec_public_define_type", {locale: locale, type: 'REGULAR'}) }}">
                                {{ 'Public.Catalog.NextStep'| trans({}, "messages", locale) }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 type">
                    <div class="type__block">
                        <div class="type__block__body">
                            <div class="flex-1">
                                <div class="m-b-20">
                                    <h3>{{ 'Public.Type.Solution2.Title'| trans({}, "messages", locale) }}</h3></div>
                                <div>{{ 'Public.Type.Solution2.Message1'| trans({}, "messages", locale) }}</div>
                                <ul class="m-b-20">
                                    <li>{{ 'Public.Type.Solution2.Message2'| trans({}, "messages", locale) }}</li>
                                    <li>{{ 'Public.Type.Solution2.Message3'| trans({}, "messages", locale) }}</li>
                                    <li>{{ 'Public.Type.Solution2.Message4'| trans({}, "messages", locale) }}</li>
                                </ul>
                                <div class="m-b-30">{{ 'Public.Type.Solution2.Message5'| trans({}, "messages", locale) }}</div>
                            </div>
                            <a type="button"
                               class="btn btn__blue btn__large type__button"
                               href="{{ path("paprec_public_define_type", {locale: locale, type: 'PONCTUAL'}) }}">
                                {{ 'Public.Catalog.NextStep'| trans({}, "messages", locale) }}
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </section>
