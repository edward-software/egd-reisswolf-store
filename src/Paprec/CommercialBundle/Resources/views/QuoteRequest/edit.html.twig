{% block javascripts %}

    <script>
        $(function () {

            /*
            * Désactivation des champs Adresse en MultiSite vrai
            */
            $('select[name*="paprec_catalogbundle_quote_request[isMultisite]"]').change(function () {
                if (this.value == true) {
                    $('.address-field').prop("disabled", true);
                    $('.address-field').val('');
                } else if (this.value == false) {
                    $('.address-field').prop("disabled", false);
                }
            });

            /*
            * Désactivation des champs Signataires 2 en Signataire unique vrai
            */
            $('select[name*="paprec_catalogbundle_quote_request[isSingleSignatory]"]').change(function () {
                if (this.value == true) {
                    $('.signatory2-field').prop("disabled", true);
                    $('.signatory2-field').val('');
                } else if (this.value == false) {
                    $('.signatory2-field').prop("disabled", false);
                }
            });

            /*
            * Désactivation ou activation du choix de fréquence en fonction de si c'est Régulier ou A la demande
            */
            $('input[name*="paprec_catalogbundle_quote_request[frequency]"]').change(function () {
                if (this.value === 'ponctual') {
                    $('select[name*="paprec_catalogbundle_quote_request[frequencyTimes]"]').prop("disabled", true);
                    $('select[name*="paprec_catalogbundle_quote_request[frequencyInterval]').prop("disabled", true);

                } else if (this.value === 'regular') {
                    $('select[name*="paprec_catalogbundle_quote_request[frequencyTimes]"]').prop("disabled", false);
                    $('select[name*="paprec_catalogbundle_quote_request[frequencyInterval]').prop("disabled", false)
                }
            });

            $('.commercial-quoteRequest-save-button').on('click', function () {
                $('#commercialQuoteRequestForm').submit();
            });


            $('.commercial-quoteRequest-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_quoteRequest_index") }}";

                Swal.fire({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'General.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then(function (result) {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

            $('#paprec_catalogbundle_quote_request_postalCode').autocomplete({
                source: '' + $('#paprec_catalogbundle_quote_request_postalCode').data('url'),
                minLength: 2
            })

        });
    </script>
