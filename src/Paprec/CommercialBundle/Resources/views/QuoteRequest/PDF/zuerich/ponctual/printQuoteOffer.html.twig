            width: 100%;
            margin-bottom: 20px;
        }

        table td, table th {
            font-size: 13px;
            overflow: hidden;
            word-break: normal;
            text-align: center;
            border: 1px solid #2c4491;
            border-right: 0px;
            border-bottom: 0px;
        }

        table th {
            padding: 5px 10px;
            vertical-align: top;
        }

        table td {
            padding: 5px;
        }

        table span {
            font-weight: normal;
        }

        table tr:last-child > td {
            border-bottom: 1px solid #2c4491;
        }

        table tr > td:last-child, table tr > th:last-child {
            border-right: 1px solid #2c4491;
        }

        table .table-header td {
            padding: 0;
            border-top: 0;
        }

        table .table-footer1 td:nth-child(n+2):nth-child(-n+3) {
            border-left: 0;
        }

        table .table-footer1 td:last-child {
            border-left: 0;
        }

        table .table-footer1 td:nth-child(n+5):nth-child(-n+7) {
