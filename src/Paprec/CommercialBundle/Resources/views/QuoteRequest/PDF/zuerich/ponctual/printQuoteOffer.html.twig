        table .table-footer2 td:nth-child(n+2):nth-child(-n+3) {
            border-left: 0;
        }

        table .table-footer2 td:nth-child(-n+4) {
            border-top: 0;
        }

        table .table-footer2 td:last-child {
            border-right: 0;
        }

        table .table-footer2 td {
            padding: 0 0 2px 0;
        }

        table .empty {
            height: 15px;
        }

        table .empty td:last-child {
            border-left: 0 !important;
            border-right: 0 !important;
        }

        .check {
            display: inline-block;
            width: 10px;
            height: 10px;
            vertical-align: middle;
            outline: 2px solid grey;
            margin-left: 5px;
            margin-bottom: 3px;
        }

        .check.active {
            border: 2px solid white;
            outline: 2px solid grey;
            background-color: black;
        }

        .offer__signature > div {
            width: 48%;
        }

        /* simple-table */

        table.simple-table tr:not(:first-child) td {
            border-top: 0 !important;
        }
        table.simple-table td {
            padding: 2px 5px;
        }
        table.simple-table tr td:first-child {
            width: 250px;
            padding-right: 30px;
        }
        table.simple-table tr td:nth-child(2) {
            width: 150px;
            border-left: 0;
        }
        table.simple-table tr td:nth-child(3) {
            width: 100px;
        }

        /*footer*/
        .offer__footer {
            padding-top: 20px;
            border-top: 3px solid #2c4491;
            /*position: absolute;*/
            /*bottom: 0;*/
            margin-top: 10px;
            width: 100%;
