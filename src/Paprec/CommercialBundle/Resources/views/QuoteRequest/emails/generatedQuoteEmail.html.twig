<body>

{% if quoteRequest.civility == 'M' %}
    {{ 'Commercial.GeneratedQuoteEmail.Dear.M'|trans({}, "messages", locale) }}
{% elseif quoteRequest.civility == 'Mme' %}
    {{ 'Commercial.GeneratedQuoteEmail.Dear.Mrs'|trans({}, "messages", locale) }}
{% endif %} {{ quoteRequest.firstName }} {{ quoteRequest.lastName }},<br><br>

{{ 'Commercial.GeneratedQuoteEmail.Message1'| trans({'%date%': quoteRequest.dateCreation|localizeddate('short', 'medium', locale)}, "messages", locale) }}
<br><br>
{{ 'Commercial.GeneratedQuoteEmail.Message2'| trans({}, "messages", locale) }}
<br><br>
{{ 'Commercial.GeneratedQuoteEmail.Message3'| trans({}, "messages", locale) }}
<br><br>
{% if quoteRequest.type != 'PONCTUAL' %}
{{ 'Commercial.GeneratedQuoteEmail.Message4'| trans({}, "messages", locale) }}
<a href="{{ absolute_url(path("paprec_public_signatory_index", {locale: locale, quoteRequestId: quoteRequest.id, token: quoteRequest.token})) }}">
    {{ 'Commercial.GeneratedQuoteEmail.Message5'| trans({}, "messages", locale) }}
</a>
<br><br>
{% endif %}
{{ 'Commercial.GeneratedQuoteEmail.Regards'| trans({}, "messages", locale) }}
<br><br>
{{ 'Commercial.GeneratedQuoteEmail.Partner'| trans({}, "messages", locale) }}
<br><br>
{{ 'Commercial.GeneralEmail.Address1'| trans({}, "messages", locale) }}<br>
{{ 'Commercial.GeneralEmail.Address2'| trans({}, "messages", locale) }}<br>
{{ 'Commercial.GeneralEmail.Address3'| trans({}, "messages", locale) }}<br>
{{ 'Commercial.GeneralEmail.Address4'| trans({}, "messages", locale) }}<br>

</body>
